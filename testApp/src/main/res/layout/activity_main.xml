<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="eltos.simpledialogfragments.MainActivity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alert_dialog"
            android:id="@+id/alert"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onAlertClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_dialog"
            android:id="@+id/check"
            android:layout_below="@+id/alert"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onCheckClick" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:alignmentMode="alignMargins"
            android:orientation="vertical"
            android:id="@+id/gridLayout"
            android:layout_below="@+id/check">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/input_dialogs"
                android:id="@+id/textView2"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/suggestions_button"
                android:id="@+id/input"
                android:layout_row="1"
                android:layout_column="0"
                android:onClick="onSuggestionClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_button"
                android:id="@+id/phone"
                android:layout_row="2"
                android:layout_column="0"
                android:onClick="onNumerClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_button"
                android:id="@+id/mail"
                android:layout_row="1"
                android:layout_column="1"
                android:onClick="onEmailClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:id="@+id/passwd"
                android:layout_row="1"
                android:layout_column="2"
                android:onClick="onPasswordClick" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:alignmentMode="alignMargins"
            android:orientation="vertical"
            android:layout_below="@+id/gridLayout"
            android:id="@+id/gridLayout2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/list_dialogs"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/direct_choice_button"
                android:id="@+id/list3"
                android:layout_row="1"
                android:layout_column="1"
                android:onClick="onDirectClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/single_choice_button"
                android:id="@+id/list1"
                android:layout_row="2"
                android:layout_column="0"
                android:onClick="onSingleClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/multi_choice_button"
                android:id="@+id/list2"
                android:layout_row="2"
                android:layout_column="1"
                android:onClick="onMultiClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/simple_button"
                android:id="@+id/list0"
                android:layout_row="1"
                android:layout_column="0"
                android:onClick="onSimpleClick" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:alignmentMode="alignMargins"
            android:orientation="vertical"
            android:layout_below="@+id/gridLayout2"
            android:id="@+id/gridLayout3" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_picker_button"
                android:id="@+id/timePicker"
                android:layout_row="1"
                android:layout_column="1"
                android:onClick="onTimeClick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/date_and_time_dialogs"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_picker_button"
                android:id="@+id/datePicker"
                android:layout_row="1"
                android:layout_column="0"
                android:onClick="onDateClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/datetime_button"
                android:id="@+id/dateTimePicker"
                android:layout_row="1"
                android:layout_column="2"
                android:onClick="onDateTimeClick" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:alignmentMode="alignMargins"
            android:orientation="vertical"
            android:id="@+id/gridLayout4"
            android:layout_below="@+id/gridLayout3">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color_button"
                android:id="@+id/color"
                android:layout_row="1"
                android:layout_column="0"
                android:onClick="onColorClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color_wheel_button"
                android:id="@+id/colorWheelButton"
                android:layout_row="1"
                android:layout_column="1"
                android:onClick="onColorWheelClick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/color_dialogs"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="2" />

        </GridLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popup"
            android:id="@+id/recursive"
            android:layout_alignTop="@+id/alert"
            android:layout_toRightOf="@+id/alert"
            android:layout_toEndOf="@+id/alert"
            android:onClick="onRecourseClick" />

        <Button
            android:text="@string/overflow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recursive"
            android:layout_toRightOf="@+id/check"
            android:layout_toEndOf="@+id/check"
            android:id="@+id/button"
            android:onClick="onOverflowClick" />

        <Button
            android:text="@string/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/recursive"
            android:layout_toEndOf="@+id/recursive"
            android:id="@+id/button2"
            android:onClick="onImageClick" />

        <Button
            android:text="@string/qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button2"
            android:layout_toRightOf="@+id/button"
            android:layout_toEndOf="@+id/button"
            android:id="@+id/button3"
            android:onClick="onQrClick" />

    </RelativeLayout>

</ScrollView>